<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include2"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/btnCardio"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cardio Exercises"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnForca"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Strength Exercises"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnManageWorkout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Manage workout"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <com.example.projectjava.UI.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        layout="@layout/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
